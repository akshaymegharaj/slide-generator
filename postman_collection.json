{
  "info": {
    "_postman_id": "slide-generator-api-collection",
    "name": "Slide Generator API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/", "host": ["{{base_url}}"], "path": [""] }
      }
    },
    {
      "name": "Create Presentation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"topic\": \"API Demo\",\n  \"num_slides\": 3,\n  \"aspect_ratio\": \"16:9\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/v1/presentations", "host": ["{{base_url}}"], "path": ["api", "v1", "presentations"] }
      }
    },
    {
      "name": "Get Presentation",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/api/v1/presentations/{{presentation_id}}", "host": ["{{base_url}}"], "path": ["api", "v1", "presentations", "{{presentation_id}}"] }
      }
    },
    {
      "name": "List Presentations",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "type": "text" }
