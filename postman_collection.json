          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"theme\": \"minimal\",\n  \"aspect_ratio\": \"4:3\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/v1/presentations/{{presentation_id}}/configure", "host": ["{{base_url}}"], "path": ["api", "v1", "presentations", "{{presentation_id}}", "configure"] }
